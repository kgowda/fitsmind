<p id="notice"><%= notice %></p>

<h1>User Chats</h1>

<table>
  <thead>
    <tr>
      <th>User1</th>
      <th>User2</th>
      <th>Chat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chat.each do |chat| %>
      <tr>
        <td><%= chat.user1_id %></td>
        <td><%= chat.user2_id %></td>
        <td><%= chat.chat_id %></td>
        <td><%= link_to 'Show', chat %></td>
        <td><%= link_to 'Edit', edit_chat_path(chat) %></td>
        <td><%= link_to 'Destroy', chat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

